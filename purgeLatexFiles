#!/bin/bash
set -e # Any subsequent commands which fail will cause the shell script to exit immediately.

# All the intermediate file types generated by PDF Latex and Bibtex that will be removed.
declare -a EXTENSIONS=("*.tex~" "*.aux" "*.bbl" "*.blg" "*.lof" "*.log" "*.lot" "*.out" "*.toc")

for e in "${EXTENSIONS[@]}" # Remove every file type from the subdirecory of current working directory.
do
	for f in $(find -name $e)
	do
		rm $f
	done
done

